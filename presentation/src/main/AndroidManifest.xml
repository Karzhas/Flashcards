<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kz.karzhas.flashcards">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:name=".di.FlashcardsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.newWord.NewWordActivity"></activity>
        <activity android:name=".ui.flashcards.FlashcardsActivity" />
        <activity android:name=".ui.categories.CategoriesActivity" />
        <activity android:name=".ui.learn.LearnActivity" />
        <activity android:name=".ui.categories.GroupsActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>